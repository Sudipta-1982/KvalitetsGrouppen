@{
  TempData.Keep();
  string? currentPage = ViewContext.HttpContext.Request.Path;
}



<!-- Menu -->
@* ! Do this simple *@
<aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">

  @* ! Hide app brand if navbar-full *@
  <div
    class='app-brand demo @((@ViewData["navbarFull"] != null && Convert.ToBoolean(@ViewData["navbarFull"])) ? "d-xl-none" : "")'>
    <a asp-controller="Home" asp-action="Index" class="app-brand-link">
      <span class="app-brand-logo demo">
        @await Html.PartialAsync("../_Partials/_Macros")
      </span>
      <span class="app-brand-text demo menu-text fw-bold ms-2">@TempData.Peek("appName")</span>
    </a>

    <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto">
      <i
        class="bx bx-chevron-left bx-sm d-flex align-items-center justify-content-center menu-toggle-icon d-none d-xl-flex"></i>
      <i class="bx bx-x d-flex d-xl-none bx-sm align-middle align-items-center justify-content-center"></i>
    </a>
  </div>

  <div class="menu-inner-shadow"></div>

  @* ! Starter Kit menu-items *@
  <ul class="menu-inner py-1">
    <li class='menu-item@(currentPage == "/" ? " active" : "")'>
      <a asp-controller="Home" asp-action="Index" class="menu-link">
        <i class="menu-icon tf-icons bx bx-home-smile"></i>
        <div data-i18n="Start">Start</div>
      </a>
    </li>
    <li class='menu-item@(currentPage == "/Page2" ? " active" : "")'>
      <a asp-controller="Page2" asp-action="Index" class="menu-link d-flex align-items-center">
        <i class="menu-icon tf-icons bx bx-detail me-2"></i>
        <div data-i18n="Login" class="menu-text">Login</div>
      </a>
    </li>

    <li class='menu-item@(currentPage == "/Page3" ? " active" : "")'>
      <a asp-controller="Page3" asp-action="Index" class="menu-link d-flex align-items-center">
        <i class="menu-icon tf-icons bx bx-book me-2"></i> <!-- Book Icon -->
        <div data-i18n="Manual">Manual</div>
      </a>
    </li>


    <li class='menu-item@(currentPage == "/DocumentList" ? " active" : "") toggle-visibility'>
      <a asp-controller="DocumentList" asp-action="Index" class="menu-link">
        <i class="menu-icon tf-icons bx bx-detail"></i>
        <div data-i18n="Document List">Dokumentlista</div>
      </a>
    </li>
    <li class='menu-item@(currentPage == "/FileExplorer" ? " active" : "") toggle-visibility'>
      <a asp-controller="FileExplorer" asp-action="Index" class="menu-link d-flex align-items-center">
        <i class="menu-icon tf-icons bx bx-envelope-open me-2"></i> <!-- Open Envelope Icon -->
        <div data-i18n="File Explorer">Utforskare</div>
      </a>
    </li>

    <li class='menu-item@(currentPage == "/People" ? " active" : "")'>
      <a asp-controller="People" asp-action="Index" class="menu-link d-flex align-items-center">
        <i class="menu-icon tf-icons bx bx-group me-2"></i> <!-- People Icon -->
        <div data-i18n="People">Medarbetare</div>
      </a>
    </li>


    <li class="menu-header small text-uppercase toggle-visibility" style="color: gray;">
      <span class="menu-header-text" data-i18n="Apps">APPAR</span>
    </li>

    <li class='menu-item@(currentPage == "/PageIncident" ? " active" : "")'>
      <a asp-controller="PageIncident" asp-action="Index" class="menu-link d-flex align-items-center">
        <i class="menu-icon tf-icons bx bx-error me-2"></i> <!-- Triangle with Exclamation Icon -->
        <div data-i18n="Incident">Avvikelser</div>
      </a>
    </li>

    <li class='menu-item@(currentPage == "/ListofLaws" ? " active" : "")'>
      <a asp-controller="ListofLaws" asp-action="Index" class="menu-link d-flex align-items-center">
        <i class="menu-icon tf-icons bx bx-notepad me-2"></i> <!-- Notebook Icon -->
        <div data-i18n="List of Laws">Laglista</div>
      </a>
    </li>

    <li class='menu-item@(currentPage == "/Suppliers" ? " active" : "")'>
      <a asp-controller="Suppliers" asp-action="Index" class="menu-link d-flex align-items-center">
        <i class="menu-icon tf-icons bx bx-package me-2"></i> <!-- Package Box Icon -->
        <div data-i18n="Suppliers">Leverantörer</div>
      </a>
    </li>




    <li class='menu-item@(currentPage == "/Page4" ? " active" : "")'>
      <a asp-controller="Page4" asp-action="Index" class="menu-link d-flex align-items-center">
        <i class="menu-icon tf-icons bx bx-group me-2"></i> <!-- People Icon -->
        <div data-i18n="Customers">Kunder</div>
      </a>
    </li>


    <li class="menu-header small text-uppercase toggle-visibility" style="color: gray;">
      <span class="menu-header-text" data-i18n="SETTINGS">INSTÄLLNINGAR</span>
    </li>

    <li class='menu-item@(currentPage == "/RolesPermission" ? " active" : "")'>
      <a asp-controller="RolesPermission" asp-action="Index" class="menu-link d-flex align-items-center">
        <i class="menu-icon tf-icons bx bx-key me-2"></i> <!-- Key Icon -->
        <div data-i18n="Roles & Permission">Roller & Behörighet</div>
      </a>
    </li>
    <ul class="menu-sub">
      <li class='menu-item@(currentPage == "/RolesPermission/Roles" ? " active" : "")'>
        <a asp-controller="Access" asp-action="Roles" class="menu-link">
          <div data-i18n="Roles">Roles</div>
        </a>
      </li>
      <li class='menu-item@(currentPage == "/RolesPermission/Permission" ? " active" : "")'>
        <a asp-controller="Access" asp-action="Permission" class="menu-link">
          <div data-i18n="Permission">Permission</div>
        </a>
      </li>
    </ul>

    <li class='menu-item@(currentPage == "/Company" ? " active" : "")'>
      <a asp-controller="Company" asp-action="Index" class="menu-link d-flex align-items-center">
        <i class="menu-icon tf-icons bx bx-buildings me-2"></i> <!-- Office Building Icon -->
        <div data-i18n="Company">Företaget</div>
      </a>
    </li>


  </ul>

</aside>
<!-- / Menu -->
