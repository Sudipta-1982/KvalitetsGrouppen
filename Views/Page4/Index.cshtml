@{
  ViewData["Title"] = "Customer List";
  Layout = "_ContentNavbarLayout"; // Use your layout path
}




<div class="container-xxl flex-grow-1 container-p-y">
  <h4 class="fw-bold py-3 mb-4">Customer List</h4>

  <!-- Stats Cards -->
  <div class="row mb-4">
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <h5 class="card-title">Customers</h5>
          <h3>143</h3>
          <small>Total Number</small>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <h5 class="card-title">Not Satisfied</h5>
          <h3>40</h3>
          <small>Total Number</small>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <h5 class="card-title">Satisfied</h5>
          <h3>46</h3>
          <small>Total Number</small>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <h5 class="card-title">No Record</h5>
          <h3>57</h3>
          <small>Total Number</small>
        </div>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <div class="card mb-4">
    <div class="card-body">
      <form class="row g-3">
        <div class="col-md-4">
          <select class="form-select">
            <option selected>Select Classification</option>
            <option>A Customer</option>
            <option>B Customer</option>
            <option>C Customer</option>
            <option>D Customer</option>
            <option>Not Active</option>
            <option>Prospect</option>
          </select>
        </div>
        <div class="col-md-4">
          <select class="form-select">
            <option selected>Select Satisfaction Level</option>
            <option>Satisfied</option>
            <option>Not Satisfied</option>
            <option>No Record</option>
          </select>
        </div>
        <div class="col-md-4">
          <select class="form-select">
            <option selected> Select Evaluation Date</option>
            <option>Last 3 months</option>
            <option>Last 6 months</option>
            <option>This Year</option>
            <option>Last year</option>
            <option>Last 3 years</option>
            <option>All years </option>
            <option>No evaluation date </option>
          </select>
        </div>
      </form>
    </div>
  </div>

  <!-- Table + Actions -->
  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <input type="text" class="form-control w-25" placeholder="Search Customer" />
      <div>
        <button class="btn btn-outline-secondary me-2">Export</button>
        <a class="btn btn-primary" data-bs-toggle="offcanvas" href="#addCustomerOffcanvas" role="button">
          + Add New Customer
        </a>
      </div>
    </div>

    <div class="table-responsive text-nowrap">
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Customer</th>
            <th>Classification</th>
            <th>Contact</th>
            <th>Email</th>
            <th>Satisfaction</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <!-- Sample Row -->
          <tr>
            <td><input type="checkbox" /></td>
            <td>
              <div class="d-flex align-items-center">
                <img src="https://i.pravatar.cc/40" class="rounded-circle me-2" width="40" />
                <div>
                  <strong>Aski Interior Group</strong><br />
                  <small>551894187</small>
                </div>
              </div>
            </td>
            <td><span class="badge bg-success">A Customer</span></td>
            <td>Kalle Karlsson</td>
            <td>info@e-post.com</td>
            <td><span class="badge bg-label-success">Satisfied</span></td>
            <td>
              <button class="btn btn-icon btn-sm btn-outline-secondary"><i class="bx bx-globe"></i></button>
              <button class="btn btn-icon btn-sm btn-outline-secondary"><i class="bx bx-trash"></i></button>
              <button class="btn btn-icon btn-sm btn-outline-secondary"><i class="bx bx-show"></i></button>
              <button class="btn btn-icon btn-sm btn-outline-secondary"><i
                  class="bx bx-dots-vertical-rounded"></i></button>
            </td>
          </tr>
          <!-- Repeat for other customers -->
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- Offcanvas Structure -->
<div class="offcanvas offcanvas-end" tabindex="-1" id="addCustomerOffcanvas" aria-labelledby="addCustomerLabel">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="addCustomerLabel">Add New Customer</h5>
    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <form asp-action="AddCustomer" method="post" class="d-flex flex-column gap-3">
      <div>
        <label class="form-label">Customer Name</label>
        <input type="text" class="form-control" name="CustomerName" placeholder="Enter Customer Name" required />
      </div>
      <div>
        <label class="form-label">Customer ID</label>
        <input type="text" class="form-control" name="CustomerID" placeholder="Enter Customer ID" required />
      </div>
      <div>
        <label class="form-label">Contact Person</label>
        <input type="text" class="form-control" name="ContactPerson" placeholder="Enter Contact Person" />
      </div>
      <div>
        <label class="form-label">Email</label>
        <input type="email" class="form-control" name="Email" placeholder="Enter Email" />
      </div>
      <div>
        <label class="form-label">Website</label>
        <input type="url" class="form-control" name="Website" placeholder="Enter Website" />
      </div>
      <div>
        <label class="form-label">Classification</label>
        <select class="form-select" name="Classification">
          <option selected disabled>Choose...</option>
          <option value="A Customer">A Customer</option>
          <option value="B Customer">B Customer</option>
          <option value="C Customer">C Customer</option>
          <option value="D Customer">D Customer</option>
          <option value="Not Active">Not Active</option>
          <option value="Prospect">Prospect</option>
        </select>
      </div>
      <div>
        <label class="form-label">Satisfaction Level</label>
        <select class="form-select" name="SatisfactionLevel">
          <option selected disabled>Select...</option>
          <option value="Satisfied">Satisfied</option>
          <option value="Not Satisfied">Not Satisfied</option>
          <option value="No Record">No Record</option>
        </select>
      </div>
      <div>
        <label class="form-label">Evaluation Date</label>
        <input type="date" class="form-control" name="EvaluationDate" />
      </div>
      <div class="d-flex justify-content-end gap-2 mt-4">
        <button type="submit" class="btn" style="background-color:#5C7CFA; color:white;">Submit</button>
        <button type="button" class="btn" style="background-color: #FFE4E6; color: #FF0000;"
          data-bs-dismiss="offcanvas">Cancel</button>
      </div>
    </form>
  </div>
</div>
